<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="26dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tvThem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chi tiết loại sach"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="18sp"
                android:padding="20dp" />
            <TextView
                android:id="@+id/tvNameLSach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên loại sách: "
                android:textStyle="bold"
                android:layout_below="@id/tvThem"
                android:textSize="18sp"
                android:padding="20dp" />
            <TextView
                android:id="@+id/txt_namLoaiSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên loại sách"
                android:layout_toEndOf="@id/tvNameLSach"
                android:layout_below="@id/tvThem"
                android:textSize="18sp"
                android:padding="20dp" />
            <TextView
                android:id="@+id/tvTrangThai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái: "
                android:layout_below="@id/tvNameLSach"
                android:paddingStart="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txtTrangThai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_namLoaiSach"
                android:text="Trạng thái"
                android:layout_toEndOf="@id/tvTrangThai"
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:layout_marginBottom="20dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTrangThai"
                android:background="@drawable/custom_button_red"
                android:text="Quay lại"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp"
                android:layout_marginHorizontal="10dp"
                />






